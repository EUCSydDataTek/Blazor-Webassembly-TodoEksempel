@if(Isbusy)
{
    <button class="btn btn-secondary disabled" disabled><i class="fa-solid fa-rotate fa-spin"></i> @Text</button>
}
else
{
    <button class="btn btn-primary" @onclick="OnClick"><i class="fa-solid fa-rotate"></i> @Text</button>
}


@code {
    [Parameter] public bool Isbusy { get; set; } = false;

    [Parameter] public string? Text { get; set; } = "";

    [Parameter] public EventCallback OnClick { get; set; }
}
