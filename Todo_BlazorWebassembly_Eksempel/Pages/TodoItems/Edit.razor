@page "/item/edit/{ItemId:int}"
@inject ITodoService _TodoService
@inject NavigationManager _Navigation
@inject IToastService toastService

<ItemFormComponent ValidSubmit="EditTodo" ItemId="ItemId"></ItemFormComponent>

@code {

    [CascadingParameter] BlazoredModalInstance BlazoredModal { get; set; } = default!;

    [Parameter] public int ItemId { get; set; }

    public async void EditTodo(TodoItem item)
    {
        try
        {
            var newitem = await _TodoService.EditTodoItemAsync(item);
            toastService.ShowSuccess(newitem.Title, "Item updated");
            await BlazoredModal.CloseAsync();
        }
        catch (Exception e)
        {
            toastService.ShowWarning(e.Message);
        }
        


    }

}
